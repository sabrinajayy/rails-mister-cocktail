<%= render 'banner' %>

<p id="notice"><%= notice %></p>

  <div class="container">
    <div class="cocktails-list">
      <div class="row">
          <% @cocktails.each do |cocktail| %>
            <div class="col-xs-12 col-sm-4">
              if !cocktail.photo.nil?
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill%>') ">
              else
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://barsandbartending.com/wp-content/uploads/2017/01/hqdefault.jpg') ">
              end
                <div class="card-category"><%= cocktail.name %></div>
                <div class="card-description">
                  <p><%= link_to 'View Recipe', cocktail, class: 'card-link btn btn-primary' %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
    </div>

    <div class="row">
      <%= link_to 'New Cocktail', new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>


